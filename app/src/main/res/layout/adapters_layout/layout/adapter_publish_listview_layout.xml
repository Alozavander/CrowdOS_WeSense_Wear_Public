<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <View
        android:id="@+id/listview_topline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/listview_topline"/>
    
    <TextView
        android:id="@+id/pulishpage_modelTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center|left"
        android:text="任务发布基础模板"
        android:textColor="@color/black"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/publishpage_sensorsUse"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:gravity="center|left"
        android:layout_marginLeft="7dp"
        android:text="传感器：GPS    照相机"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="@id/pulishpage_modelTitle"
        app:layout_constraintTop_toBottomOf="@id/pulishpage_modelTitle"
        android:textSize="10sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/listview_topline"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/publishpage_sensorsUse"/>


</androidx.constraintlayout.widget.ConstraintLayout>