<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/listview_topline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/listview_topline"/>

    <ImageView
        android:id="@+id/homepage_lvItem_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_home_black_24dp"/>

    <TextView
        android:id="@+id/homepage_lvItem_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/homepage_lvItem_icon"
        app:layout_constraintTop_toTopOf="@id/homepage_lvItem_icon"
        app:layout_constraintBottom_toBottomOf="@id/homepage_lvItem_icon"
        android:layout_marginLeft="10dp"
        android:text="设置"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/homepage_lvItem_delete"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@id/homepage_lvItem_icon"
        app:layout_constraintTop_toTopOf="@id/homepage_lvItem_icon"
        android:src="@mipmap/right_arrow"/>

</androidx.constraintlayout.widget.ConstraintLayout>