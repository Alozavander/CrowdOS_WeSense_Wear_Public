<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/activity_setting_sensorData_mainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="设置项"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <TextView
        android:id="@+id/activity_setting_sensorData_juniorContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/activity_setting_sensorData_mainName"
        app:layout_constraintTop_toBottomOf="@id/activity_setting_sensorData_mainName"
        android:layout_marginTop="5dp"
        android:text="次级内容"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>


    <ImageView
        android:id="@+id/activity_setting_sensorData_link"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@id/activity_setting_sensorData_juniorContent"
        app:layout_constraintTop_toTopOf="@id/activity_setting_sensorData_mainName"
        android:src="@mipmap/right_arrow"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/listview_topline"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/activity_setting_sensorData_juniorContent" />
</androidx.constraintlayout.widget.ConstraintLayout>