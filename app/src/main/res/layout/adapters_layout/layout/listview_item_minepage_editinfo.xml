<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/minepage_editInfo_lvItem_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="账号"
        android:textSize="14dp"/>
    
    <TextView
        android:id="@+id/minepage_editInfo_lvItem_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/minepage_editInfo_lvItem_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="洋葱"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/listview_topline"
        app:layout_constraintTop_toBottomOf="@id/minepage_editInfo_lvItem_content"/>

    <ImageView
        android:id="@+id/minepage_editInfo_lvItem_clickIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/right_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/minepage_editInfo_lvItem_title"
        app:layout_constraintBottom_toBottomOf="@id/minepage_editInfo_lvItem_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>